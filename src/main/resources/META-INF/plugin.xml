<idea-plugin>
    <id>soulx.CodeReadingMarkNotePro</id>
    <name>Code Reading Mark Note Pro</name>
    <vendor email="170918810@qq.com" url="https://plugins.jetbrains.com/plugin/24163-code-reading-mark-note-pro">soulx</vendor>
    
    <!-- 插件描述和分类 -->
    <category>Code tools</category>
    <version>3.6.9</version>
    <!-- 版本兼容性：最低支持2024.3，兼容到2025.3 -->
    <idea-version since-build="243" until-build="253.*"/>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- 插件依赖：明确声明所需的IntelliJ模块 -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.CodeReadingNoteService" />
        <!-- SyncService uses @Service annotation, no need to register here -->
        <!-- New operation services - all use @Service annotation -->
        <!-- TopicLineOperationService, BookmarkRepairService, LineNumberUpdateService are auto-registered -->
        <applicationService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.sync.SyncSettings" />
        <applicationService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.settings.LanguageSettings" />
        <projectConfigurable parentId="tools" instance="jp.kitabatakep.intellij.plugins.codereadingnote.sync.ui.SyncConfigurable"
                             id="jp.kitabatakep.intellij.plugins.codereadingnote.sync.SyncConfigurable"
                             displayName="Code Reading Note Sync"/>
        <toolWindow icon="MyIcons.PLUGIN" id="Code Reading Mark Note Pro" anchor="bottom" factoryClass="jp.kitabatakep.intellij.plugins.codereadingnote.ManagementToolWindowFactory" />
        <editorFactoryDocumentListener implementation="jp.kitabatakep.intellij.plugins.codereadingnote.remark.BookmarkDocumentListener"/>
        <!-- Startup activity for sync conflict detection -->
        <postStartupActivity implementation="jp.kitabatakep.intellij.plugins.codereadingnote.sync.SyncStartupActivity"/>
    </extensions>
    <projectListeners>
    <listener topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"
              class="jp.kitabatakep.intellij.plugins.codereadingnote.remark.CodeRemarkEditorManagerListener"/>
   </projectListeners>
    <actions>
        <!-- Editor context menu action: Add to Topic (Alt+M) -->
        <action
                icon="MyIcons.PLUGIN"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction">
            <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
            <add-to-group group-id="EditorPopupMenu" />
        </action>

        <!-- Navigate to note at current line (Alt+G) -->
        <action
                icon="MyIcons.PLUGIN"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.NavigateToNoteAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.NavigateToNoteAction"
                text="Navigate to Note"
                description="Navigate to the note at the current line">
            <keyboard-shortcut keymap="$default" first-keystroke="alt G"/>
            <add-to-group group-id="EditorPopupMenu" />
        </action>

        <!-- Remove note at current line (Alt+Delete) -->
        <action
                icon="AllIcons.General.Remove"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.RemoveNoteAtLineAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.RemoveNoteAtLineAction"
                text="Remove Note at Line"
                description="Remove the note at the current line">
            <keyboard-shortcut keymap="$default" first-keystroke="alt DELETE"/>
            <add-to-group group-id="EditorPopupMenu" />
        </action>

        <!-- Reverse locate: select note in TreeView from cursor (no shortcut, available via gutter popup button and context menu) -->
        <action
                icon="AllIcons.General.Locate"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.ReverseLocateAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.ReverseLocateAction"
                text="Reverse Locate Note in Tree"
                description="Select the note at the current line in the TreeView panel">
            <add-to-group group-id="EditorPopupMenu" />
        </action>
        
        <!-- Bookmark repair action - available in Tools menu and toolbar -->
        <action
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.RepairBookmarksAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.RepairBookmarksAction"
                text="Repair Code Reading Bookmarks"
                description="Scan and repair missing bookmarks for Code Reading Note"
                icon="AllIcons.Actions.ForceRefresh">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>